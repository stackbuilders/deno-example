<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

  <style>
    body {
      padding: 50px;
    }
  </style>
  <title>Deno example</title>
</head>

<body>
  <div class="container" style="max-width: 30rem">
    <h1>Add developer</h1>
    <form action="/people" method="POST">
      <div class="form-group">
        <label>Full Name</label>
        <input type="text" name="fullname" class="form-control" required>
      </div>
      <div class="form-group">
        <label>Age</label>
        <input type="number" name="age" class="form-control" required>
      </div>
      <div class="form-group">
        <label>Frontend or Backend?</label>
        <select class="form-control" id="questiona" name="questiona">
          <option value="">Select</option>
          <option value="frontend">Frontend</option>
          <option value="backend">Backend</option>
          <option value="both">Both</option>
        </select>
      </div>
      <div class="form-group">
        <label>Expected wage?</label>
        <input type="number" name="questionb" class="form-control">
      </div>
      <div class="form-group">
        <label>Currently working?</label>
        <select class="form-control" id="questionc" name="questionc" required>
          <option value="">Select</option>
          <option value="no">No</option>
          <option value="yes">Yes</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Insert</button>
    </form>
    <br>
    <% if(people.length > 0){%>
    <h2>List</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Fullname</th>
          <th>Age</th>
        </tr>
      </thead>
      <tbody>
        <% people.forEach(function(person) { %>
          <tr>
            <td><%= person.fullName %></td>
            <td><%= person.age %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <form action="/download" method="POST">
      <button type="submit" class="btn btn-primary">Download csv</button>
    </form>
    <% } %>
    <% if(message) { %>
    <div class="panel panel-default">
      <div class="panel-body"><%= message %></div>
    </div>
    <% } %>
  </div>
</body>

</html>